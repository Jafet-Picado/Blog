@model IEnumerable<Blog.Models.BlogPost>

@{
    ViewData["Title"] = "Index";
}


<div class="container-fluid">
    <div class="row" style="background-color: rgba(173, 216, 230, 0.5);">
        <div class="col-md-12 text-center">
            <h1 class="text-dark p-3 m-0">Diario Web</h1>
        </div>
    </div>
</div>
 <div class="container">
    <div class="row">
        <div class="col-md-9">
            @if (Model is not null)
            {
                @foreach (var item in Model)
                {
                    <article class="blog-post">
                        <h3>@item.Title <small>@item.CreatedAt.ToString("dd/MM/yyyy")</small></h3>
                        <p>@item.Content</p>
                        <!-- Aquí puedes mostrar otros datos relacionados con el post si es necesario -->
                    </article>
                }
            }

        </div>
        <div class="col-md-3">
            <h2>Sección 2</h2>
            <p>Contenido de la sección 2.</p>
        </div>
    </div>
 </div>
   

